/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
    // Put you code here:
    HalfAdder(a=a, b=b, sum=s, carry=cr1);
    HalfAdder(a=s, b=c, sum=sum, carry=cr2);
    Or(a=cr1, b=cr2, out=carry);
}